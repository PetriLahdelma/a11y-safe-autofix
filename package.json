{
  "name": "a11y-safe-autofix",
  "version": "0.1.1",
  "description": "CLI that applies safe accessibility autofixes with dry-run support.",
  "type": "module",
  "bin": {
    "a11y-safe-autofix": "dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "npm run build && node dist/index.js --paths test/fixtures",
    "lint": "tsc -p tsconfig.json --noEmit",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "npm run build && node test/cli.test.js",
    "brand:build": "node scripts/brand-build.mjs",
    "brand:screenshots": "node scripts/brand-screenshots.mjs",
    "brand:demo": "node scripts/brand-demo.mjs"
  },
  "dependencies": {
    "fast-glob": "^3.3.2"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PetriLahdelma/a11y-safe-autofix.git"
  },
  "homepage": "https://github.com/PetriLahdelma/a11y-safe-autofix#readme",
  "bugs": {
    "url": "https://github.com/PetriLahdelma/a11y-safe-autofix/issues"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "typescript": "^5.5.4",
    "svgo": "^3.3.2",
    "sharp": "^0.34.5"
  }
}
